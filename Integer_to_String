#include <cs50.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main(void)
{
  int count=0;
  int division=get_int();
  int divisionCount=division;

  while (divisionCount>=1)
  {
      // count the number of digits of the integer
      count++;
      divisionCount/=10;
  }

  // the largest number of digits of an integer is 20 for a long long integer of size 64bits
  char chararray[20];
  chararray[count]='\0';
  for (int j=0;j<count;j++)
  {
      //get each digit of the integer backward
      //using casting to convert it into a character
      //then put it in the char array
      chararray[count-j-1]=(char)(division%10);
      division/=10;
  }
}
